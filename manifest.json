{
  "name": "Github Code Counter",
  "version": "1.0.0",
  "description": "A Chrome extension to count lines of code in a GitHub repository.",
  "icons": {
    "16": "./icons/16.png",
    "32": "./icons/32.png",
    "48": "./icons/48.png",
    "128": "./icons/128.png"
  },
  "manifest_version": 3,
  "author": "Maisha Supritee Chowdhury",
  "action": {
    "default_popup": "index.html",
    "default_title": "Github Code Counter"
  },
  "permissions": ["activeTab", "tabs", "storage"]
}
